@model IEnumerable<FirstWebMVC.Models.Person>

<div class="container mt-5">
    <!-- Tiêu đề & Nút Thêm -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary">Danh sách Người Dùng</h2>
        <a asp-action="Create" asp-controller="Person" class="btn btn-success">
            <i class="fas fa-user-plus"></i> Thêm Người Dùng
        </a>
    </div>

    <!-- Bảng danh sách -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Giới Tính</th>
                    <th>Email</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var person in Model)
                {
                    <tr>
                        <td>@person.Id</td>
                        <td>@person.Name</td>
                        <td>@person.Gender</td>
                        <td>@person.email</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Person" asp-route-id="@person.Id" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Chỉnh sửa
                            </a>
                            <a asp-action="Delete" asp-controller="Person" asp-route-id="@person.Id" class="btn btn-danger btn-sm"
                               onclick="return confirm('Bạn có chắc muốn xóa người này?');">
                                <i class="fas fa-trash"></i> Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
