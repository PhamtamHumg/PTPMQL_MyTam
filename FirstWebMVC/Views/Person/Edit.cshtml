@model FirstWebMVC.Models.Person

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center text-primary">Chỉnh sửa Người Dùng</h2>
        <hr>

        <form asp-action="Edit" asp-controller="Person" method="post">
            <div class="mb-3">
                <label asp-for="Id" class="form-label fw-bold">ID</label>
                <input asp-for="Id" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Tên Người Dùng</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên..." required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label fw-bold">Giới Tính</label>
                <select asp-for="Gender" class="form-select" required>
                    <option value="Male">Nam</option>
                    <option value="Female">Nữ</option>
                    <option value="Other">Khác</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="email" class="form-label fw-bold">Email</label>
                <input asp-for="email" class="form-control" type="email" placeholder="Nhập email..." required />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

<!-- FontAwesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
